{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "outDir": "./dist/",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true,
        "lib": ["dom", "es2017"]
    },
    
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}